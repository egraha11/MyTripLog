@model List<Trip>

<a asp-controller="Trip" asp-action="Add">Add Trip</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr><th>Destination</th><th>Start Date</th><th>End Date</th><th>Accommodation</th><th>Things to Do</th><th></th></tr>
    </thead>
    <tbody>
        @foreach(var trip in Model)
            {
                <tr><td>@trip.DestinationId</td><td>@trip.StartDate</td><td>@trip.EndDate</td><td>@trip.AccommodationId</td>
                <td><ul>@if (trip.TripActivities != null)
                    {
                        foreach (var activity in trip.TripActivities)
                        {<li>activity.Activity.ActivityName</li>}
                    }</ul>
                </td><td><a asp-controller="Trip" asp-route-id="@trip.TripId" asp-action="DeleteDestination"class="btn btn-primary">Delete</a></td></tr>
            }
    </tbody>
</table>
