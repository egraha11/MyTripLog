@model Trip

<div class="container">
    <h1 class="text-center">Add Info For @ViewBag.Accommodation</h1>
    <form asp-action="Add" asp-route-id="Page3" method="post">
        <div class="form-group">
            <label asp-for="AccommodationPhone" class="control-label">Accomodation Phone</label>
            <input asp-for="AccommodationPhone" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="AccommodationEmail" class="control-label">Accomodation Email</label>
            <input asp-for="AccommodationEmail" class="form-control" />
        </div>
        <input type="hidden" asp-for="Destination" />
        <input type="hidden" asp-for="StartDate" />
        <input type="hidden" asp-for="EndDate" />
        <input type="hidden" asp-for="Accommodation" />
        <button type="submit" class="btn btn-dark bg-dark text-white">Next</button>
        <a asp-controller="Home" asp-action="Clear" class="btn-light text-dark">Cancel</a>
    </form>
</div>