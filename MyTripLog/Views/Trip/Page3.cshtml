@model Trip

<div class="container">
    <h1 class="text-center">Add Things To Do In @ViewBag.Destination </h1>
    <form asp-action="Add" asp-route-id="" method="post">
        <div class="form-group">
            <label asp-for="ThingToDo1" class="control-label"></label>
            <input asp-for="ThingToDo1" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ThingToDo2" class="control-label"></label>
            <input asp-for="ThingToDo2" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ThingToDo3" class="control-label"></label>
            <input asp-for="ThingToDo3" class="form-control" />
        </div>
        <input type="hidden" asp-for="Destination" />
        <input type="hidden" asp-for="StartDate" />
        <input type="hidden" asp-for="EndDate" />
        <input type="hidden" asp-for="Accommodation" />
        <input type="hidden" asp-for="AccommodationEmail" />
        <input type="hidden" asp-for="AccommodationPhone" />
        <button type="submit" class="btn btn-dark bg-dark text-white">Save</button>
        <a asp-controller="Home" asp-action="Clear" class="btn-light text-dark">Cancel</a>
    </form>
</div>